<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/whiteTransparent"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="horizontal">



    <ImageView
        android:id="@+id/ad_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/default_image"/>


        <RelativeLayout
            android:id="@+id/inside1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_image">

            <LinearLayout
                android:paddingTop="5dp"
                android:id="@+id/ad_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ad_title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Title" />

                <TextView
                    android:id="@+id/tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingStart="1dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:text="Product Tag"
                    >

                </TextView>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/ad_title_layout"
                android:background="@color/light_grey">

            </View>

            <LinearLayout
                android:id="@+id/type_layout"
                android:layout_below="@+id/ad_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ad_type"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/grey"
                    android:layout_weight="1"
                    android:text="type" />

                <TextView
                    android:id="@+id/ad_estimation"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:paddingStart="1dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:text="estimation" />

            </LinearLayout>



        </RelativeLayout>


</RelativeLayout>



</androidx.cardview.widget.CardView>